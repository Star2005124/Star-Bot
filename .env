# ============================================
# FORKA WHATSAPP BOT CONFIGURATION v3.0
# ============================================

# BOT IDENTITY
BOT_NAME=Forka
BOT_VERSION=3.0.0
PREFIX=.
OWNER_NAME=Developer

# OWNER CONFIGURATION (comma separated, no spaces)
OWNER_NUMBERS=919876543210,918765432109
BOT_NUMBER=919999999999

# SESSION MANAGEMENT
SESSION_ID=WA_SESSION
SESSION_TYPE=multi-file

# API KEYS (Optional - for enhanced features)
OPENAI_API_KEY=sk-xxxxx
WEATHER_API_KEY=xxxxx
TENOR_API_KEY=xxxxx
GOOGLE_API_KEY=xxxxx

# IMAGE URLs
MENU_IMAGE=https://i.imgur.com/your-menu-image.jpg
ALIVE_IMAGE=https://i.imgur.com/your-alive-image.jpg
WELCOME_IMAGE=https://i.imgur.com/welcome-image.jpg
GOODBYE_IMAGE=https://i.imgur.com/goodbye-image.jpg

# BOT SETTINGS
MAX_GROUP_SIZE=100
ANTI_SPAM_TIMEOUT=3000
MAX_MESSAGE_LENGTH=1000
DEFAULT_LANGUAGE=en
TIMEZONE=Asia/Kolkata

# FEATURE TOGGLES (true/false)
AUTO_READ=true
AUTO_TYPING=true
ANTI_SPAM=true
WELCOME_MESSAGE=true
GOODBYE_MESSAGE=true
AUTO_STICKER=true
NSFW_FILTER=true

# DATABASE (Optional)
MONGODB_URI=mongodb://localhost:27017/forka
REDIS_URL=redis://localhost:6379

# LOGGING
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/forka.log

# PERFORMANCE
MAX_CONCURRENT_DOWNLOADS=5
CACHE_TTL=3600000
REQUEST_TIMEOUT=30000

# SECURITY
ADMIN_PASSWORD=changeme
ENCRYPTION_KEY=your-secret-key-here
